<h2>Sign up</h2>
<%= devise_error_messages! %>

<div class="twelve wide column centered">
	<div class="ui card fluid">
		<div class="ui grid">
			<div class="ten wide column centered">
				<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  				<%= f.error_notification %>
<div class="ui form fluid">
  <div class="fields">
    <div class="field">
      <label>Email</label>
    	<%= f.input_field :email, required: true, autofocus: true %>
    </div>
    <div class="field">
      <label>Password</label>
    	<%= f.input_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    </div>
    <div class="field">
      <label>Password Confirmation</label>
    <%= f.input_field :password_confirmation, required: true %>
    </div>
  </div>
</div>
		<%= f.button :submit, "Sign up", class: 'ui primary button' %>
<% end %>
	
<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</div>



